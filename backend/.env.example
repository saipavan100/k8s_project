# Local Development Configuration Template
# Copy this file to .env and replace the values with your own

NODE_ENV=development
PORT=5000
HOST=localhost

# MongoDB Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/database_name?appName=YourApp

# JWT Configuration
JWT_SECRET=replace_me_with_your_jwt_secret_key
JWT_EXPIRE=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=replace_me_with_your_email@gmail.com
EMAIL_PASSWORD=replace_me_with_your_app_password
EMAIL_FROM=replace_me_with_your_email@gmail.com

# Admin Configuration
ADMIN_EMAIL=replace_me_with_admin_email@example.com
ADMIN_PASSWORD=replace_me_with_admin_password

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=replace_me_with_your_endpoint_url
AZURE_OPENAI_API_KEY=replace_me_with_your_api_key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Base URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
